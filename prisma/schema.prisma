generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id String @id @default(cuid())
  title String
  description String
  location String
  startAt DateTime
  endAt DateTime
  capacity Int? // optional, can be blank
}